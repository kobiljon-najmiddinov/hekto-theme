{% liquid
    assign ss = section.settings
    assign bs = block.settings
%}

<div class="featured-product">
    <h2 class="featured-product__heading">{{ ss.heading }}</h2>
</div>

{% schema %}
{
    "name": "Hekto Featured Product",
    "enabled_on": { "templates": ["*"] },
    "settings": [
        {
            "type": "inline_richtext",
            "id": "heading",
            "default": "Featured Products",
            "label": "Heading"
        }
    ],
    "blocks": [
        {
            "type": "@app"
        }
    ],
    "presets": [
        {
            "name": "Hekto Featured Product"
        }
    ]
}
{% endschema %}
