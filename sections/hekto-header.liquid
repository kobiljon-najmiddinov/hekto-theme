{{ 'global.min.css' | asset_url | stylesheet_tag }}

<style>
  .flex {
    display: flex;
  }
  /* .header {
    border: 1px solid black;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 20px;
    width: 100%;
    min-height: 80px;
  } */
  .navigation {
    border: 1px solid black;
    flex-wrap: wrap;
    justify-content: space-evenly;
    align-items: center;
    padding: 20px;
    width: 100%;
    min-height: 80px;
  }
  .favicon-nav {
    align-items: center;
    gap: 70px;
  }

  .nav-lists {
    list-style-type: none;
    flex-direction: row;
    gap: 25px;
    padding-inline-start: 0;
  }

  .nav-lists > select {
    font-family: var(--ff-lato);
    font-size: 16px;
    font-weight: 400;
    line-height: 20px;
    color: hsl(var(--clr-main) / 1);
  }

  .nav-lists select:hover,
  .nav-lists select:focus {
    color: hsl(var(--clr-accent) / 1);
  }
  .nav-lists a {
    font-weight: 400;
    color: hsl(var(--clr-main) / 1);
    text-decoration: none;
  }

  #search-bar,
  .search-div {
    height: 40px;
  }
  .search-div {
    height: 40px;
    justify-content: center;
    align-items: center;
    gap: 0;
  }

  .search-div input {
    border: 2px solid hsl(var(--clr-accent) / 1);
    height: 40px;
    width: 371px;
  }

  .search-div input:focus {
    outline: 0;
    box-shadow: none;
  }
  .search-btn {
    background-color: hsl(var(--clr-red) / 1);
    height: 40px;
    width: 51px;
    gap: 0;
    justify-content: center;
    align-items: center;
    border: 0;
  }
</style>

<div class="header flex">
  {% comment %} <img src="{{ section.settings.image | image_url: width: 98 }}" alt="logo"> {% endcomment %}

  <div class="navigation flex ">
    <div class="favicon-nav flex" style="gap: 70px;">
      {{ section.settings.image | image_url: width: 100, height: 34 | image_tag }}
      <ul class="nav-lists flex ">
        <select name="nav-page" id="nav-page">
          <option value="home">Home</option>
          <option value="page">Page</option>
        </select>
        <li>
          <a href="#">Pages</a>
        </li>
        <li>
          <a href="#">Products</a>
        </li>
        <li>
          <a href="#">Blog</a>
        </li>
        <li>
          <a href="#">Shop</a>
        </li>
        <li>
          <a href="#">Contact</a>
        </li>
      </ul>
    </div>
    <div class="search-div flex">
      <input type="search" id="seach-bar">
      <button type="submit" class="search-btn flex">
        {% render 'icons', icon: 'search' %}
      </button>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header Hekto",
  "class": "header-hekto",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Logo Image"
    }
  ],
  "presets": [
    {
      "name": "Header Hekto"
    }
  ]
}
{% endschema %}
